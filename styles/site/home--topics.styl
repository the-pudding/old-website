#page-home #topics
	
	.top__nav
		ul
			display flex
			min-width 30rem

		li
			padding 0 0.75rem
			line-height 1
			&.is-active
				button
					font-weight 700
			button
				text-transform capitalize
				line-height 1
				color $gray-dark

	.top__more
		position absolute
		top 0.4rem
		right 0

		li
			display none			
			&.is-visible
				display block
		a
			font-family $sans-display
			text-transform uppercase
			font-weight 700
			border none
			color $gray-dark
			set-type-size(small, false)
			line-height 1
		svg
			vertical-align middle
			transform translateY(-5%)
			width 1.25rem

	.topics__stories
		+mq('bp-m')
			transform translateX(-1 * $line-width)
			width calc(100% + $line-width)
		
		ul
			display flex
			flex-wrap wrap
			justify-content space-between
			opacity 0
			transition opacity 250ms
			&:nth-child(n+2)
				display none
			&.is-visible
				opacity 1
				display flex
			&.is-hidden
				display none
		
		li
			width 100%
			margin-bottom 4rem
			border-top $line-width solid $fg
			&:nth-child(3)
				margin-bottom 0
			&:nth-child(n+4)
				display none
			&:first-of-type
				border none
			&:last-of-type
				margin-bottom 0
			+mq('bp-m')
				margin 0
				border-top none
				width calc(33.3% - 1.5rem)
				&:nth-child(n+4)
					display block
				&:nth-child(-n+3)
					margin-bottom 3rem
			
	
	.story-item
		display flex
		flex-direction column
		
	.item__info
		padding 1rem 0

	.item__hed
		font-weight 700
		set-type-size(large) 
		line-height 1
	
	.item__dek
		set-type-size(root, false)
		line-height 1.4
		font-family $serif
		margin-top 0.5rem
	
	.item__author
		font-weight 700
		margin-top 1rem
		set-type-size(small)
		line-height 1.2
		
		a
			display inline-block
			text-transform uppercase
	
	