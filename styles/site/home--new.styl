	.story-item
		display flex
		flex-direction column
		
	.item__info
		padding 1rem 0
		

	.item__hed
		font-weight 700
		set-type-size(large) 
		line-height 1
	
	.item__dek
		display none
		set-type-size(root, false)
		line-height 1.4
		font-family $serif
		margin 0
	
	.item__author
		font-weight 700
		margin-top 0.5rem
		set-type-size(small)
		line-height 1.2
		
		a
			display inline-block
			text-transform uppercase