#page-home #new
	margin-bottom 1.5rem
	ul
		display grid
		grid-gap 3.5rem
		grid-template-columns repeat(2,1fr)
		grid-template-rows auto

		+mq('bp-m')
			grid-template-columns repeat(3, 1fr)


	li:first-of-type
		grid-column 1/3
		.item__info
			+mq('bp-m')
				display flex
				> a
					width 50%
				> *
					width 50%
		.item__hed
			set-type-size(x-large)
			+mq('bp-m')
				set-type-size(xxx-large)
				font-weight 900
		.item__dek
			display block
			+mq('bp-m')
				set-type-size(large)
				line-height 1.2
			
			// .item__author
			// 	margin-top 2rem

		+mq('bp-m')
			grid-row 1/4


