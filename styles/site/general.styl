html
	scroll-behavior smooth
body
	font-family $sans
	overflow-x hidden

button 
	font-family $sans
	background-color transparent
	
.btn, a.btn
	font-weight 900
	text-transform uppercase
	padding 0.75rem
	set-type-size(small, false)
	line-height 1
	background-color $fg
	color $bg
	font-family $sans
	letter-spacing 0.03em
	border none
	
.random-color, a.random-color, .btn.random-color
	color $gray-dark
	transition color 250ms
	&--0
		color $purple
	&--1
		color $blue
	&--2
		color $green
	&--3
		color $red

.random-background, a.random-background, .btn.random-background
	background-color $gray-dark
	transition background-color 250ms
	&--0
		background-color $purple
	&--1
		background-color $blue
	&--2
		background-color $green
	&--3
		background-color $red
	
.random-stroke
	transition color 250ms
	&--0
		stroke $purple
	&--1
		stroke $blue
	&--2
		stroke $green
	&--3
		stroke $red	

	

.story-item
	
	.item__hed
		margin 0
	
	.item__dek
		font-family $serif
		margin 0
	
	.item__author
		margin 0
		color $gray-dark
		a
			color $gray-dark
	
	.item__time
		display none
	
	.img__hit
		display none
	
section
	width calc(100% - 4rem)
	transform translateX(0.5rem)
	position relative
	max-width $main-width
	margin 0 auto 5rem auto
	border-left 4px solid $fg
	border-top 4px solid $fg
	padding-top 1rem
	
	+mq('bp-m')
		width calc(100% - 12rem)
		transform translateX(0)
		max-width 60rem

	.section__label
		position absolute
		top 0
		left 0
		margin 0
		margin-top 1.2rem
		transform-origin 0 0
		transform rotate(-90deg) translate(-100%, -150%)
		font-weight 700
		text-transform uppercase
		line-height 1
		font-size 20px


select option
	font-family $sans

.random-link--0 a:hover
	color $purple
.random-link--1 a:hover
	color $blue
.random-link--2 a:hover
	color $green
.random-link--3 a:hover
	color $red