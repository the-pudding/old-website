html
	scroll-behavior smooth

body
	overflow-x hidden
	font-family $sans

button
	background-color transparent
	font-family $sans-display

input
	font-family $sans-display

input[type='email'], input[type='text'], input[type='button'], input[type='submit']
	margin 0
	border-radius 0
	-webkit-appearance none

.btn, a.btn
	padding 0.75rem
	text-transform uppercase
	font-weight 900
	font-family $sans-display
	set-type-size(small, false)
	border none
	background-color $fg
	color $bg
	letter-spacing 0.03em
	line-height 1

.random-color, a.random-color, .btn.random-color
	color $gray-dark
	transition color 250ms

	&--0
		color $purple

	&--1
		color $blue

	&--2
		color darken($green, 10)

	&--3
		color darken($red, 20)

.random-background, a.random-background, .btn.random-background
	background-color $gray-dark
	transition background-color 250ms

	&--0
		background-color $purple

	&--1
		background-color $blue

	&--2
		background-color darken($green, 10)

	&--3
		background-color darken($red, 20)

.random-stroke
	transition color 250ms

	&--0
		stroke $purple

	&--1
		stroke $blue

	&--2
		stroke $green

	&--3
		stroke $red

.story-item
	.item__hed
		margin 0
		font-family $sans-display

	.item__dek
		margin 0
		font-family $serif

	.item__author
		display block
		margin 0
		color $gray-dark
		font-family $sans-display

		a
			color $gray-dark

	.item__time
		display none

	.img__hit
		display none

section
	position relative
	margin 0 auto 5rem auto
	padding-top 0.5rem
	max-width $main-width
	width calc(100% - 2rem)
	border-top 4px solid $fg

	+mq('bp-m')
		max-width 60rem
		width calc(100% - 12rem)
		transform translateX(0)

	.section__top
		display flex

		+mq('bp-m')
			display flex

	.section__description
		margin 0
		color $gray-dark
		font-family $sans-display
		line-height 1

	.section__label
		margin 0
		margin-right 1rem
		margin-bottom 2rem
		text-transform uppercase
		font-weight 700
		font-family $sans-display
		line-height 1

select option
	font-family $sans-display

.random-link--0 a:hover
	color $purple

.random-link--1 a:hover
	color $blue

.random-link--2 a:hover
	color $green

.random-link--3 a:hover
	color $red

.layout--feature
	ul
		position relative
		display flex
		flex-wrap wrap
		justify-content space-between

		+mq('bp-m')
			justify-content flex-start
			width 100%

	li
		margin-bottom 3rem
		width 100%

		+mq('bp-m')
			margin 0
			margin-right 2rem
			margin-bottom 0
			width 50%
			width calc(50% - 1rem)
			border-top none

			&:nth-child(odd)
				margin-right 0

			&:nth-child(n+4)
				display block
				margin-top 3rem

			&:nth-child(n+6)
				display none

	li:nth-child(3)
		margin-bottom 0

	li:nth-child(n+4)
		display none

	li:first-of-type
		width 100%
		border none

		.item__hed
			set-type-size(x-large)

		.item__dek
			display block

		+mq('bp-m')
			margin-right 0
			margin-bottom 2rem
			margin-left 0

			.story-item
				flex-direction row

			.item__img
				width 70%

			.item__info
				padding-top 0
				padding-left 1rem
				width 30%

			.item__hed
				set-type-size(xx-large)
				font-weight 900

			.item__dek
				set-type-size(large)
				line-height 1.2

			.item__author
				margin-top 2rem

	li:last-of-type
		margin-bottom 0

	.story-item
		display flex
		flex-direction column

	.item__img
		position relative

	.item__info
		padding 1rem 0

	.item__hed
		font-weight 700
		set-type-size(large)
		line-height 1

	.item__dek
		set-type-size(root, false)
		margin-top 0.5rem
		font-family $serif
		line-height 1.4

	.item__author
		margin-top 1rem
		font-weight 700
		set-type-size(small)
		line-height 1.2

		a
			display inline-block
			text-transform uppercase

.layout--small
	ul
		display flex
		flex-wrap wrap
		justify-content space-between
		transition opacity 250ms

		+mq('bp-m')
			width 100%

	li
		margin-bottom 4rem
		width 100%

		&:first-of-type
			border none

		&:last-of-type
			margin-bottom 0

		+mq('bp-m')
			margin 0
			width calc(25% - 1.5rem)
			border-top none

	.story-item
		display flex
		flex-direction row
		align-items center

		+mq('bp-m')
			flex-direction column

	.item__img
		width 60%

		+mq('bp-m')
			width 100%

	.item__info
		padding-left 1rem
		width 40%

		+mq('bp-m')
			padding 1rem 0
			width 100%

	.item__hed
		font-weight 700
		set-type-size(medium)
		line-height 1

	.item__dek
		display none

	.item__author
		margin-top 1rem
		font-weight 700
		set-type-size(small)
		line-height 1

		a
			display inline-block
			text-transform uppercase

.top__more
	position absolute
	top 0.4rem
	right 0

	a
		border none
		color $gray-dark
		text-transform uppercase
		font-weight 700
		font-family $sans-display
		set-type-size(small, false)
		line-height 1

		&:hover
			color red

	svg
		width 1.25rem
		vertical-align middle
		transform translateY(-5%)

.top__nav
	transform translateY(-1rem)

	+mq('bp-m')
		transform translateY(0)

	div
		display flex
		flex-wrap wrap

	span
		margin-bottom 0.25rem
		padding-right 0.75rem
		line-height 1

		+mq('bp-m')
			margin-bottom 0
			padding 0 0.75rem

		&.is-active
			button
				color $off-black
				font-weight 700

		button
			color $gray-dark
			text-transform capitalize
			line-height 1

			&:hover
				color $off-black
