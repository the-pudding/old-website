.cta
	width 100%
	color $bg
	margin-bottom 5rem
	
	&__inner
		width calc(100% - 3.6rem)
		transform translateX(0.5rem)
		border-top $line-width solid $fg
		border-left $line-width solid $fg
		max-width $main-width
		margin 0 auto
		padding 3rem 1rem
		+mq('bp-5')
			width 100%
			transform translateX(0)
		
	
	&__hed
		margin 0 auto
		set-type-size(x-large, false)
		line-height 1.4
		
	&__items
		display flex
		flex-wrap wrap
		justify-content space-between
		margin 0 auto
		margin-top 2rem
		+mq('bp-5')
			flex-wrap nowrap

	&__newsletter
		display flex
		align-items center
		flex-wrap wrap
		margin-bottom 2rem

		+mq('bp-5')
			margin 0
			flex-wrap nowrap

		input
			set-type-size(small, false)
			line-height 1
			font-family $sans
			padding 0.6rem
			background transparent
			border 1px solid $bg
			margin-right 0.5rem
			&::placeholder
				color $bg
			
		p
			margin 0
			margin-bottom 1rem
			line-height 1
			width 100%
			set-type-size(large)
			+mq('bp-5')
				width auto
				margin 0
				margin-right 1rem

	&__patreon
		display flex
		align-items center
		flex-wrap wrap
		+mq('bp-5')
			flex-wrap nowrap
		p
			margin 0
			margin-bottom 1rem
			set-type-size(large)
			line-height 1
			width 100%
			+mq('bp-5')
				width auto
				margin 0
				margin-right 1rem


	.btn, a.btn
		background-color $bg 