#page-home
	padding-top 4rem
	+mq('bp-m')
		padding-top 0
	
	.story-item a
		border none
		display block
	
	.layout--feature
		ul
			position relative
			display flex
			flex-wrap wrap
			justify-content space-between
			+mq('bp-m')
				justify-content flex-end
				width 100%
			
		li
			width 100%
			border-top $line-width solid $fg
			margin-bottom 3rem

			+mq('bp-m')
				width 50%
				margin 0
				border-top none
				width calc(50% - 1rem)
				margin-right 2rem
				margin-bottom 0
				
				&:nth-child(odd)
					margin-right 0
				
				&:nth-child(n+4)
					display block
					margin-top 3rem
				
				&:nth-child(n+6)
					display none
		
		li:nth-child(3)
				margin-bottom 0
		
		li:nth-child(n+4)
				display none
		
		li:first-of-type
			border none
			width 100%
			.item__hed
				set-type-size(x-large)
			.item__dek
				display block
			+mq('bp-m')
				margin-bottom 2rem
				margin-left 0
				margin-right 0
				.story-item
					flex-direction row
				.item__img
					width 70%
				.item__info
					width 30%
					padding-top 0
					padding-left 1rem
				.item__hed
					set-type-size(xx-large)
					font-weight 900
				.item__dek
					set-type-size(large)
					line-height 1.2
				.item__author
					margin-top 2rem
		
		li:last-of-type
			margin-bottom 0
			
		.story-item
			display flex
			flex-direction column
			
		.item__img
			position relative
			
		.item__info
			padding 1rem 0

		.item__hed
			font-weight 700
			set-type-size(large) 
			line-height 1
		
		.item__dek
			set-type-size(root, false)
			line-height 1.4
			font-family $serif
			margin-top 0.5rem

		.item__author
			font-weight 700
			margin-top 1rem
			set-type-size(small)
			line-height 1.2
			
			a
				display inline-block
				text-transform uppercase


	.layout--small
		ul
			display flex
			flex-wrap wrap
			justify-content space-between
			transition opacity 250ms
			+mq('bp-m')
				width 100%
		
		li
			width 100%
			border-top $line-width solid $fg
			margin-bottom 4rem
			&:first-of-type
				border none
			&:last-of-type
				margin-bottom 0
			+mq('bp-m')
				width calc(25% - 1.5rem)
				border-top none
				margin 0
				

		.story-item
			display flex
			flex-direction row
			align-items center
			+mq('bp-m')
				flex-direction column

		.item__img
			width 60%
			+mq('bp-m')
				width 100%
			
		.item__info
			padding-left 1rem
			width 40%
			+mq('bp-m')
				width 100%
				padding 1rem 0

		.item__hed
			font-weight 700
			set-type-size(medium) 
			line-height 1

		.item__dek
			display none

		.item__author
			font-weight 700
			margin-top 1rem
			set-type-size(small)
			line-height 1
			
			a
				display inline-block
				text-transform uppercase

		
		.top__more
			position absolute
			top 0.4rem
			right 0

			a
				font-family $sans-display
				text-transform uppercase
				font-weight 700
				border none
				color $gray-dark
				set-type-size(small, false)
				line-height 1
			svg
				vertical-align middle
				transform translateY(-5%)
				width 1.25rem