#home
	section
		position relative
		max-width 80rem
		margin 0 auto
		border-left 2px solid $fg
		border-top 2px solid $fg
		// transform translateX($sidebar-width)

	.section__label
		position absolute
		top 0
		left 0
		margin 0
		transform translateX(-135%) rotate(-90deg)
		transform-origin 100% 0%
		line-height 1

	
	.story-item a
		border none
		display block