#home
	
	section
		position relative
		max-width $main-width
		margin 0 auto 5rem auto
		border-left 4px solid $fg
		border-top 4px solid $fg
		padding-top 1rem
		// transform translateX($sidebar-width)

	.section__label
		position absolute
		top 0
		left 0
		margin 0
		margin-top 1rem
		transform-origin 0 0
		transform rotate(-90deg) translate(-100%, -150%)
		font-weight 700
		text-transform uppercase
		line-height 1

	
	.story-item a
		border none
		display block
	