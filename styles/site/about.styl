#page-about	
	padding-top 6rem	
	+mq('bp-m')
		padding-top 0	
	section
		padding-left 1rem
		+mq('bp-m')
			padding-left 15rem
			padding-top 4rem

	.section__label
		margin 0
		margin-top 1rem
		line-height 1
	.page-nav
		display none
		position absolute
		top 6rem
		left 2rem
		li
			margin-bottom 0.25rem
		a
			border none
			color $gray-dark
			&:hover
				color $fg
				font-weight 700
			

		+mq('bp-m')
			display block
	
	.section__big
		set-type-size(x-large)
		line-height 1.2
		margin-top 0.5em

	.section__hed
		position relative
		font-weight 700
		text-transform uppercase
		font-size 20px
		padding-top 0.25em
		margin-top 4rem

		&:before
			content ''
			display block
			position absolute
			top 0
			left 0
			width 4rem
			height $line-width
			background-color $fg

	p
		line-height 1.5
		margin 1em 0


	table
		thead
			border-bottom 1px solid $gray-light
		thead td
			color $gray-dark
			text-transform uppercase
			font-weight 700
			set-type-size(small)
		tr
			border-bottom 1px solid $gray-light
			&:last-of-type
				border none
		td
			padding 0.25em
			&:first-of-type
				padding-right 1em
	
	.authors
		display flex
		flex-wrap wrap
		margin-top 2rem
		
		li
			width 8rem
			margin-bottom 1rem
			text-align center
			margin-right 1rem
			
		.author__img
			width 8rem
			height 8rem
			background-position center center
			background-size cover
			margin 0 auto
		
		p
			margin 0
			font-weight 700
			set-type-size(root)