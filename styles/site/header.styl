header
	z-index set-index('overlay')
	display flex
	justify-content space-between
	align-items center
	max-width $main-width
	margin 0 auto
	box-shadow 0 0 2px rgba(0,0,0,0.25)
	position fixed
	top 0
	left 0
	transform translate3d(0,0,0)
	background $bg
	width 100%
	overflow hidden
	padding 0.5rem 0
	
	+mq('bp-m')
		width calc(100% - 10rem)
		position relative
		transform none
		box-shadow none
		padding-top 1.25rem
		padding-bottom 1rem

	.header__title
		width 10rem
		margin-left 3.5rem
		margin-top 0.25rem
		+mq('bp-m')
			width 12rem
			margin 0
		a
			display block
			border none 
			padding-top 0.3rem


	.header__sidebar
		position fixed
		top 0
		left 0
		padding 0.5rem 1rem
		display flex
		width 100%
		justify-content space-between
		
		+mq('bp-m')
			flex-direction column
			justify-content center
			width $sidebar-width
			padding 0
			padding-top 1rem
			

		.sidebar__social
			padding-right 3rem
			+mq('bp-m')
				padding-right 0

			svg
				fill $gray
				stroke $bg

		a
			display block
			border none
			+mq('bp-m')
				margin 0 auto

		.header__logo
			width 2rem
			+mq('bp-m')
				width 3rem
				margin-bottom 1rem

		ul
			display flex
			flex-direction row
			align-items center
			+mq('bp-m')
				flex-direction column
				padding-right 1rem
			li
				display block
				line-height 1
				&:last-of-type
					display none
				+mq('bp-m')
					margin-bottom 0.5rem
					&:last-of-type
						display block
			a
				width 2rem
				
		
	.header__nav
		position absolute
		top 0
		right 0
		transform translateX(100%)

		+mq('bp-m')
			position relative
			transform translateX(0)

		.nav__links
			display flex
			align-items center
		
		li
			padding 0 1.25rem

		a
			display block
			border none

		
	.header__menu
		background none
		padding 0
		width 1.75rem
		position absolute
		line-height 1
		top 50%
		transform translateY(-50%)
		right 1rem
		+mq('bp-m')
			display none

		svg
			stroke $gray
			width 100%
			height 100%
