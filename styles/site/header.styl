header
	z-index set-index('overlay')
	display flex
	justify-content space-between
	align-items center
	max-width $main-width
	margin 0 auto
	box-shadow 0 0 2px rgba(0,0,0,0.25)
	position fixed
	top 0
	left 0
	background $bg
	width 100%
	// overflow-x hidden
	padding 0.5rem 0
	
	+mq('bp-m')
		width calc(100% - 12rem)
		position relative
		transform none
		box-shadow none
		padding-top 1.25rem
		padding-bottom 1rem

	.header__title
		width 10rem
		margin-left 3.5rem
		margin-top 0.25rem
		+mq('bp-m')
			width 12rem
			margin 0
		a
			display block
			border none 


	.header__sidebar
		position fixed
		top 0
		left 0
		padding 0.5rem 1rem
		display flex
		width 100%
		justify-content space-between
		pointer-events none
		
		+mq('bp-m')
			flex-direction column
			justify-content center
			width $sidebar-width
			padding 0
			padding-top 1rem
			transform translate3d(0,0,0)
			

		.sidebar__social
			padding-right 3.5rem
			pointer-events auto
			+mq('bp-m')
				padding-right 0

			svg
				fill $gray

		a
			display block
			border none
			+mq('bp-m')
				margin 0 auto

		.header__logo
			width 2rem
			+mq('bp-m')
				width 3rem
				margin-bottom 1rem

		ul
			display flex
			flex-direction row
			align-items center
			+mq('bp-m')
				flex-direction column
				padding-right 1rem
			li
				display block
				line-height 1
				&:nth-child(n+3)
					display none
				+mq('bp-3')
					&:nth-child(n+3)
						display block
				+mq('bp-m')
					margin-bottom 0.5rem
					&:last-of-type
						display block
			a
				width 2rem
				text-align center
				+mq('bp-m')
					text-align left

				
		
	.header__nav
		position absolute
		top 0
		right 0
		transform translateX(100%)

		+mq('bp-m')
			position relative
			transform translateX(0)

		.nav__links
			display flex
			align-items center
		
		li
			padding 0 1.25rem
			&:nth-last-child(2)
				display none
				+mq('bp-7')
					display block
			&:last-of-type
				padding-right 0

		a
			display block
			border none
		
		.btn:hover
			color $bg
			background-color $gray-dark

		
	.header__menu
		position fixed
		top 0
		right 0
		transform translateX(100%)
		height 100vh
		width 100%
		max-width 28rem
		padding 1rem 1.5rem
		background-color $fg
		color $off-white
		z-index set-index(overlay)
		transition transform 200ms ease-in-out
		+mq('bp-3')
			border-left 1px solid $gray-dark

		&.is-visible
			transform translateX(0)

		a
			color $off-white
			border-bottom 1px solid $off-white
			&:hover
				color $gray-light

		.menu__links li
			margin-bottom 0.5rem
			set-type-size(medium)
			a
				border none


		.menu__patreon
			margin-top 3rem
			font-size 20px
			line-height 1.2

		.menu__patreon a
			display inline-block
			font-weight 700
			color $bg
			border 1px solid $bg
			padding 0.5em 0.75em
			font-size 0.8em
			text-transform uppercase
			margin-top 1rem
		
		.menu__tagline
			margin-top 1.5rem
			margin-bottom 1.5rem
			set-type-size(large, false)
			line-height 1.2
			font-weight 700

		


	.header__toggle-on
		position relative
		display block
		padding-right 1.5rem
		cursor pointer

		+mq('bp-m')
			display none

		svg
			stroke $gray	
		

	.header__toggle-off
		position absolute
		top 0.75rem
		right 0.75rem
		cursor pointer

		svg
			stroke $off-white	
		
		