header
	width 100%
	padding 0.5rem 0
	max-width $main-width
	margin 0 auto
	margin-bottom 2rem

	&.is-home
		.top__title
			+mq('bp-m')
				width 20rem
		.header__cta
			display flex
	
	+mq('bp-m')
		width calc(100% - 12rem)
		position relative
		transform none
		box-shadow none
		padding-top 1.25rem
		padding-bottom 1rem

	.header__top
		display flex
		justify-content space-between
		align-items center

	.top__title
		width 10rem
		margin-left 3.5rem
		margin-top 0.25rem
		+mq('bp-m')
			width 12rem
			margin 0
		a
			display block
			border none 

	.top__nav
		position absolute
		top 0
		right 0
		transform translateX(100%)

		+mq('bp-m')
			position relative
			transform translateX(0)

		.nav__links
			display flex
			align-items center
		
		li
			set-type-size(small, false)
			line-height 1
			padding 0 1rem
			font-family $sans-display
			&:last-of-type
				padding-right 0

		a
			display block
			border none
			color $gray-dark
		
		.btn:hover
			color $bg
			background-color $gray-dark


	.header__tagline
		margin 0
		margin-top 0.25rem
		set-type-size(xx-large, true)
		font-family $serif-display 


	.header__cta
		display none
		flex-wrap wrap
		align-items center
		font-family $sans-display
		margin-top 2rem
		
		.btn, a.btn
			background-color $fg
			color $bg
			font-family $sans-display
			cursor pointer

	.cta__newsletter
		display flex
		align-items center
		flex-wrap wrap
		margin-bottom 2rem

		+mq('bp-m')
			margin 0
			flex-wrap nowrap

		input
			set-type-size(small, false)
			line-height 1
			font-family $sans-display
			background transparent
			border 1px solid $gray-dark
			// margin-right 0.5rem
			color $fg
			&::placeholder
				color $gray-dark

		.newsletter__input
			width 10rem
			padding 0.6rem
			
		p
			margin 0
			margin-bottom 1rem
			line-height 1
			width 100%
			set-type-size(large)
			+mq('bp-m')
				width auto
				margin 0
				margin-right 1rem

	.cta__patreon
		display flex
		align-items center
		flex-wrap wrap
		margin-left 2rem
		+mq('bp-m')
			flex-wrap nowrap
		p
			margin 0
			margin-bottom 1rem
			set-type-size(large)
			line-height 1
			width 100%
			+mq('bp-m')
				width auto
				margin 0
				margin-right 1rem

	.cta__social
		display flex
		margin-left 2rem
		a
			border none
			margin-right 0.5rem

	


