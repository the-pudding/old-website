#page-home #how
	ul
		display flex
		flex-wrap wrap
		justify-content space-between
		transition opacity 250ms
		+mq('bp-m')
			transform translateX(-1 * $line-width)
			width calc(100% + $line-width)
	
	li
		width 100%
		border-top $line-width solid $fg
		margin-bottom 4rem
		&:first-of-type
			border none
		&:last-of-type
			margin-bottom 0
		+mq('bp-m')
			width calc(25% - 1.5rem)
			border-top none
			margin 0
			

	.story-item
		display flex
		flex-direction row
		align-items center
		+mq('bp-m')
			flex-direction column

	.item__img
		width 60%
		+mq('bp-m')
			width 100%
		
	.item__info
		padding-left 1rem
		width 40%
		+mq('bp-m')
			width 100%
			padding 1rem 0

	.item__hed
		font-weight 700
		set-type-size(medium) 
		line-height 1

	.item__dek
		display none

	.item__author
		font-weight 700
		margin-top 1rem
		set-type-size(small)
		line-height 1
		
		a
			display inline-block
			text-transform uppercase

	
	.top__more
		position absolute
		top 0.4rem
		right 0

		a
			font-family $sans-display
			text-transform uppercase
			font-weight 700
			border none
			color $gray-dark
			set-type-size(small, false)
			line-height 1
		svg
			vertical-align middle
			transform translateY(-5%)
			width 1.25rem